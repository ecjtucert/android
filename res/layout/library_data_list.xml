<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="@drawable/qz_bg_container_cell_normal"
    android:padding="10dp" >
    	     <LinearLayout 
    	        android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:orientation="vertical">
        		<TextView
		            android:id="@+id/library_book" 
		            android:layout_width="wrap_content"
		        	android:layout_height="wrap_content"
		        	android:textSize="16sp"
		        	android:layout_marginLeft="5dp"
		        	android:textColor="#7D5C94"
		        	android:paddingLeft="5dp"
		        	android:paddingTop="2dp"/>
    	         <TextView
		            android:id="@+id/library_borrow" 
		            android:layout_width="wrap_content"
		        	android:layout_height="wrap_content"
		        	android:textSize="12sp"
	        		android:layout_marginLeft="14dp"
	        		android:textColor="#818181"
	        		android:layout_marginTop="5dp"/>  
		    	 <TextView
		            android:id="@+id/library_return" 
		            android:layout_width="wrap_content"
		        	android:layout_height="wrap_content"
		        	android:textSize="12sp"
		        	android:layout_marginLeft="14dp"
		        	android:textColor="#818181"/> 
		        <TextView
		            android:id="@+id/library_num" 
		            android:layout_width="wrap_content"
		        	android:layout_height="wrap_content"
		        	android:textSize="12sp"
		        	android:layout_marginLeft="14dp"
		        	android:textColor="#818181"/>
    	     </LinearLayout>
    	     
			
			<Button
			    android:layout_width="wrap_content"
			    android:layout_height="30dp"
			    android:paddingLeft="10dp"
			    android:paddingRight="10dp"
			    android:text="@string/xujie"
			    android:layout_marginRight="2dp"
			    android:background="@null"
			    android:layout_alignParentRight="true"
			    android:layout_centerVertical="true"
			    android:textSize="13sp"/>
			

</RelativeLayout>
