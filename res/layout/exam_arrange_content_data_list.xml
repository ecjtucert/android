<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@drawable/qz_bg_container_cell_normal"
    android:paddingLeft="10dp"
    android:paddingBottom="10dp">
    
    
    <TextView
        android:id="@+id/exam_arrange_data_list_subject"
        android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:textColor="#393F8F"
	    android:textSize="18sp" />
       
    <TextView
        android:id="@+id/exam_arrange_data_list_class"
        android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:textColor="#000000"
	    android:layout_marginTop="10dp" />
    
    <TextView
         android:id="@+id/exam_arrange_data_list_term"
        android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:textColor="#000000"/>
          
        <TextView
         	android:id="@+id/exam_arrange_data_list_week"
        	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:textColor="#000000" />
    	<TextView
         	android:id="@+id/exam_arrange_data_list_time"
        	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:singleLine="true"
	    	android:textColor="#000000" />
    
    <TextView
         android:id="@+id/exam_arrange_data_list_classroom"
        android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:textColor="#000000" />
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        
        <TextView
         	android:id="@+id/exam_arrange_data_list_o_t"
        	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:textColor="#000000" />
	    <TextView
	       android:id="@+id/exam_arrange_data_list_i_t"
	       android:layout_width="wrap_content"
		   android:layout_height="wrap_content"
		   android:textColor="#000000" />  
		        
    </LinearLayout>
    
    
   
   
  
</LinearLayout>
